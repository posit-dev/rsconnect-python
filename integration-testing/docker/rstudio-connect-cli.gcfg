; Posit Connect test environment configuration

[Server]
SenderEmail = testuser@testrsc.com
EmailProvider = print
DataDir = /connect-rsconnect-data
EnableSitemap = true
AllowConfirmedUsers = true
Address = http://localhost:3939
JumpStartEnabled = false

[HTTP]
Listen = :3939
NoWarning = true

[Python]
Enabled = true
Executable = /opt/python/3.12.1/bin/python
Executable = /opt/python/3.11.7/bin/python

[Quarto]
Enabled = true
Executable = /opt/quarto/1.4.552/bin/quarto

[Authentication]
BasicAuth = true
InsecureDefaultUserAPIKey = true
APIKeyBcryptCost = 4

[Authorization]
DefaultUserRole = "publisher"

[Database]
SeedUsers = true

[Mount]
BaseDir = /connect-rsconnect-mount
